<odoo>

    <!-- ============================= -->
    <!-- REINSURANCE BORDEREAU TREE -->
    <!-- ============================= -->
    <record id="view_reinsurance_bordereau_tree" model="ir.ui.view">
        <field name="name">insurance.reinsurance.bordereau.tree</field>
        <field name="model">insurance.reinsurance.bordereau</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="reinsurance_contract_id"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="state"/>
                <field name="total_claims"/>
                <field name="total_reinsurer_share"/>
            </list>
        </field>
    </record>

    <!-- ============================= -->
    <!-- REINSURANCE BORDEREAU FORM -->
    <!-- ============================= -->
    <record id="view_reinsurance_bordereau_form" model="ir.ui.view">
        <field name="name">insurance.reinsurance.bordereau.form</field>
        <field name="model">insurance.reinsurance.bordereau</field>
        <field name="arch" type="xml">
            <form string="Reinsurance Bordereau">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,submitted,settled"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="reinsurance_contract_id"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                        <group>
                            <field name="total_claims" readonly="1"/>
                            <field name="total_reinsurer_share" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Claims">
                            <field name="line_ids">
                                <list>
                                    <field name="claim_id"/>
                                    <field name="loss_date"/>
                                    <field name="approved_amount"/>
                                    <field name="reinsurer_share"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================= -->
    <!-- ACTION (THIS WAS MISSING) -->
    <!-- ============================= -->
    <record id="action_reinsurance_bordereau" model="ir.actions.act_window">
        <field name="name">Reinsurance Bordereaux</field>
        <field name="res_model">insurance.reinsurance.bordereau</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
