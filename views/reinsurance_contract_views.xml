<odoo>

    <record id="view_reinsurance_contract_list" model="ir.ui.view">
        <field name="name">insurance.reinsurance.contract.list</field>
        <field name="model">insurance.reinsurance.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="policy_id"/>
                <field name="reinsurer_id"/>
                <field name="retention_amount"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_reinsurance_contract_form" model="ir.ui.view">
        <field name="name">insurance.reinsurance.contract.form</field>
        <field name="model">insurance.reinsurance.contract</field>
        <field name="arch" type="xml">
            <form string="Reinsurance Contract">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>

                    <group>
                        <field name="policy_id"/>
                        <field name="reinsurer_id"/>
                    </group>

                    <group string="Stop-Loss Rules">
                        <field name="retention_amount"/>
                        <field name="max_coverage_amount"/>
                    </group>

                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_reinsurance_contract" model="ir.actions.act_window">
        <field name="name">Reinsurance Contracts</field>
        <field name="res_model">insurance.reinsurance.contract</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
