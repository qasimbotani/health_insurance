<odoo>
    <!-- MEMBER LIST -->
    <record id="view_member_list" model="ir.ui.view">
        <field name="name">insurance.member.list</field>
        <field name="model">insurance.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>

                <field name="policy_id"/>
                <field name="total_claimed"/>
            </list>
        </field>
    </record>

    <!-- MEMBER FORM -->
    <record id="view_member_form" model="ir.ui.view">
        <field name="name">insurance.member.form</field>
        <field name="model">insurance.member</field>
        <field name="arch" type="xml">
            <form string="Insured Member">
                <sheet>

                    <!-- SMART BUTTON -->
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(action_member_claims)d" class="oe_stat_button" icon="fa-file-medical">
                            <field name="total_claimed" widget="statinfo" string="Total Claimed"/>
                        </button>
                        <button name="action_print_welcome_pack" type="object" string="Print Welcome Pack" class="btn-primary"/>
                        <button name="action_print_id_card" type="object" string="Print ID Card" class="btn-secondary"/>

                    </div>

                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="partner_id"/>

                        <field name="policy_id"/>
                        <field name="total_claimed" readonly="1"/>
                    </group>
                    <group string="Utilization">
                        <field name="remaining_annual_limit"/>
                        <field name="utilization_percent" widget="percentpie"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- MEMBER ACTION -->
    <record id="action_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">insurance.member</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
