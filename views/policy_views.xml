<odoo>

    <!-- ========================= -->
    <!-- POLICY LIST VIEW -->
    <!-- ========================= -->
    <record id="view_policy_list" model="ir.ui.view">
        <field name="name">insurance.policy.list</field>
        <field name="model">insurance.policy</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="state" />
                <field name="annual_limit" />
                <field name="manager_approval_limit" />
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!-- POLICY FORM VIEW -->
    <!-- ========================= -->
    <record id="view_policy_form" model="ir.ui.view">
        <field name="name">insurance.policy.form</field>
        <field name="model">insurance.policy</field>
        <field name="arch" type="xml">
            <form string="Insurance Policy">

                <!-- ================= HEADER ================= -->
                <header>
                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,active,expiring,expired" />

                    <button name="action_activate"
                        type="object"
                        string="Activate"
                        class="btn-primary"
                        invisible="state != 'draft'" />
                </header>

                <sheet>

                    <!-- ================= BASIC INFO ================= -->
                    <group>
                        <group>
                            <field name="name" />
                            <field name="member_id" />
                            <field name="company_id" />
                        </group>

                        <group>
                            <field name="annual_limit" />
                            <field name="manager_approval_limit" />
                        </group>
                    </group>

                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="days_to_expiry" readonly="1" />
                    </group>

                    <!-- ================= NOTEBOOK ================= -->
                    <notebook>

                        <!-- ===== COVERAGE ===== -->
                        <page string="Coverage">
                            <group>
                                <field name="coverage_template_id" />
                            </group>

                            <field name="coverage_line_ids">
                                <list>
                                    <field name="service_id" />
                                    <field name="covered" />
                                    <field name="annual_limit" />
                                    <field name="per_claim_limit" />
                                    <field name="copay_percentage" />
                                </list>
                            </field>
                        </page>

                    </notebook>

                </sheet>

                <chatter />

            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- POLICY ACTION -->
    <!-- ========================= -->
    <record id="action_policy" model="ir.actions.act_window">
        <field name="name">Policies</field>
        <field name="res_model">insurance.policy</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>