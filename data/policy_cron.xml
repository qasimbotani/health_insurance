<odoo>

    <record id="ir_cron_policy_state_update" model="ir.cron">
        <field name="name">Insurance Policy: Update States</field>

        <!-- model -->
        <field name="model_id" ref="model_insurance_policy" />

        <!-- execution -->
        <field name="state">code</field>
        <field name="code">model.cron_update_policy_states()</field>

        <!-- schedule -->
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>

        <!-- metadata -->
        <field name="active">True</field>
    </record>

</odoo>