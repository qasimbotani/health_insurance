<odoo>

    <record id="rule_claim_user_own" model="ir.rule">
        <field name="name">Claims: User sees own only</field>
        <field name="model_id" ref="model_insurance_claim" />
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_user'))]" />
    </record>

    <record id="rule_claim_manager_all" model="ir.rule">
        <field name="name">Claims: Manager sees all</field>
        <field name="model_id" ref="model_insurance_claim" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_manager'))]" />
    </record>
    <record id="rule_policy_user_read" model="ir.rule">
        <field name="name">Policies: User read only</field>
        <field name="model_id" ref="model_insurance_policy" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_user'))]" />
    </record>

    <record id="rule_policy_manager_all" model="ir.rule">
        <field name="name">Policies: Manager full access</field>
        <field name="model_id" ref="model_insurance_policy" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_manager'))]" />
    </record>
    <record id="rule_claim_user_write_draft_only" model="ir.rule">
        <field name="name">Claims: User can edit draft only</field>
        <field name="model_id" ref="model_insurance_claim" />
        <field name="domain_force">
            ['|',
            ('state', '=', 'draft'),
            ('create_uid', '!=', user.id)
            ]
        </field>
        <field name="perm_write" eval="False" />
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_user'))]" />
    </record>
    <record id="rule_member_user_company" model="ir.rule">
        <field name="name">Members: User sees own company</field>
        <field name="model_id" ref="model_insurance_member" />
        <field name="domain_force">
            ['|',
            ('company_id', '=', False),
            ('company_id', '=', user.company_id.id)
            ]
        </field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_user'))]" />
    </record>
    <record id="rule_member_manager_all" model="ir.rule">
        <field name="name">Members: Manager sees all</field>
        <field name="model_id" ref="model_insurance_member" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_manager'))]" />
    </record>

    <record id="rule_claim_gm_all" model="ir.rule">
        <field name="name">Claims: GM sees all</field>
        <field name="model_id" ref="model_insurance_claim" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_gm'))]" />
    </record>
    <record id="rule_provider_all_read" model="ir.rule">
        <field name="name">Providers: reminder rule (read all)</field>
        <field name="model_id" ref="model_insurance_provider" />
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
            eval="[
        (4, ref('insurance_core.group_insurance_user')),
        (4, ref('insurance_core.group_insurance_manager')),
        (4, ref('insurance_core.group_insurance_gm'))
    ]" />
    </record>
    <record id="rule_claim_committee_read" model="ir.rule">
        <field name="name">Claims: Committee sees submitted and fraud claims</field>
        <field name="model_id" ref="model_insurance_claim" />
        <field name="domain_force">
            [
            '|',
            ('escalation_level', '=', 'committee'),
            ('fraud_flag', '=', True)
            ]
        </field>
        <field name="groups" eval="[(4, ref('insurance_core.group_insurance_committee'))]" />
    </record>

    <!-- ========================= -->
    <!-- REINSURANCE GROUPS -->
    <!-- ========================= -->

    <record id="group_reinsurance_user" model="res.groups">
        <field name="name">Reinsurance User</field>
    </record>

    <record id="group_reinsurance_manager" model="res.groups">
        <field name="name">Reinsurance Manager</field>
        <field name="implied_ids" eval="[(4, ref('insurance_core.group_reinsurance_user'))]" />
    </record>


</odoo>